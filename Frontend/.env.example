# ==============================================================================
# Frontend Monorepo — Environment Variables
# ==============================================================================
# Copy this file to `.env.local` and fill in the values.
# `.env.local` is gitignored and should NEVER be committed.
# ==============================================================================

# ─── App URLs (Development) ──────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# ─── Feature Flags ───────────────────────────────────────────────────────────
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# ─── MFE Ports (used by shell rewrites — change only if ports conflict) ──────
INTERVIEW_PORT=3001
CORE_PORT=3002
LEARNING_PORT=3003
PERFORMANCE_PORT=3004
RECRUITMENT_PORT=3005
ONBOARDING_PORT=3006

# ─── Authentication (add when auth is integrated) ────────────────────────────
# AUTH_SECRET=
# AUTH_URL=http://localhost:3000
# NEXT_PUBLIC_AUTH_PROVIDER=

# ─── Analytics (add when analytics is integrated) ────────────────────────────
# NEXT_PUBLIC_ANALYTICS_ID=
