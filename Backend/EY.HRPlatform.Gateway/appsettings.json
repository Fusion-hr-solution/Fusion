{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "EY.HRPlatform.Identity",
    "Audience": "EY.HRPlatform"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        }
      },
      "training-route": {
        "ClusterId": "training-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/training/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5101/"
          }
        }
      },
      "training-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5201/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
